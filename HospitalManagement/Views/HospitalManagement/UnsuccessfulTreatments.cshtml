@model List<HospitalManagement.ViewModel.PatientDetailsViewModel>

<h2>Patients with Unsuccessful Treatments</h2>

<table class="table">
    <thead>
        <tr>
            <th>Patient Id</th>
            <th>First Name</th>
            <th>Age</th>
            <th>Address</th>
            <th>Medical Condition</th>
            <th>Unsuccessful Treatment </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.PatientId</td>
                <td>@patient.FirstName</td>
                <td>@patient.Age</td>
                <td>@patient.Address</td>
                <td>@patient.MedicalCondition</td>
                <td>@patient.UnsuccessfulTreatmentDetails</td>
               
            </tr>
        }
    </tbody>
</table>
